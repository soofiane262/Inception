FROM debian:bullseye
RUN apt-get update -y; \
	apt-get upgrade -y; \
	apt-get install redis-server -y; \
	sed -i "s/127.0.0.1/0.0.0.0/" /etc/redis/redis.conf;
COPY ./tools/ /tmp/
ENTRYPOINT [ "bash" ]
CMD [ "/tmp/redis.sh" ]